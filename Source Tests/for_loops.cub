do
  val accum: int = 0
  # 1 + 2 + 3 + 4
  for i in 1..5 do
    accum = accum + i
  end
  assert accum == 10
end

do
  val accum: int = 0
  # 1 + 3
  for i in 1..5 step 2 do
    accum = accum + i
  end
  assert accum == 4
end

do
  val accum: int = 0
  # 1 + 3
  for i := 0; i < 10; i += 1
    accum = accum + i
  end
  assert accum == 4
end

do
  val arr: int[3] = [10, 20, 30]
  val accum := 0
  for n in arr do
    accum += n
  end

  assert accum == 60
end